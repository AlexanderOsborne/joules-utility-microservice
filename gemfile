source 'https://rubygems.org'
git_source(:github) do |repo|
  "https://github.com/#{repo}.git"
end

gem 'sinatra', require: 'sinatra/base'
gem 'shotgun'
gem 'fast_jsonapi'
gem 'faraday'
gem 'puma'
gem 'require_all'

group :test do
  gem "rspec"
  gem "rack-test"
  gem 'pry'
end

group :development, :test do
  gem 'capybara'
  gem 'launchy'
  gem 'simplecov'
  gem 'pry'
  gem 'figaro', git: 'https://github.com/bpaquet/figaro.git', branch: 'sinatra'
end
